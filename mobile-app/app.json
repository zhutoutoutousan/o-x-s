{
  "expo": {
    "name": "Love AI Messenger",
    "slug": "love-ai-messenger",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.loveai.messenger",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for your memories.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.loveai.messenger",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    }
  }
}
